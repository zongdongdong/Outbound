<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/txtv_customcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20151113-1274"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/txtv_customer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="顺嘉"
            android:textColor="@color/black"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/txtv_material"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0007／20D400T涤塔夫"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/txtv_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="H0005／天蓝"
            android:textColor="@color/black"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/txtv_plan_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000"
            android:textColor="@color/red"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/txtv_billdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-06-06"
            android:textColor="@color/black"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

</LinearLayout>
